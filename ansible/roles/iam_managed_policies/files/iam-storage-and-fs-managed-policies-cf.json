{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "Managed policies for the resources",

  "Parameters": {
    "ServiceName": {
      "Type": "String",
      "Description": "The type of the aws service for which you are creating this managed policy"
    }
  },

  "Resources": {

    "SuperuserManagedPolicies": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "elasticfilesystem:*",
                "s3:*",
                "glacier:*",
                "storagegateway:*"
              ],
              "Resource": "*"
            }
          ]
        },

        "Groups": [
          "superuser"
        ],

        "Roles": [
          { "Fn::Sub": [ "superuser-${Service}-role", { "Service": { "Ref" : "ServiceName" } } ] }
        ]
      }
    },

    "DeveloperManagedPolicies": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "elasticfilesystem:*",
                "s3:*",
                "glacier:*",
                "storagegateway:*"
              ],
              "Resource": "*"
            }
          ]
        },

        "Groups": [
          "developer"
        ],

        "Roles": [
          { "Fn::Sub": [ "developer-${Service}-role", { "Service": { "Ref" : "ServiceName" } } ] }
        ]
      }
    },

    "ComputeManagedPolicies": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "s3:GetObject*",
                "s3:PutObject*",
                "s3:DeleteObject*",
                "s3:AbortMultipartUpload",
                "s3:RestoreObject",
                "s3:ReplicateObject",
                "s3:ReplicateDelete",
                "s3:GetBucket*",
                "s3:List*",
                "s3:GetReplicationConfiguration"
              ],
              "Resource": "*"
            }
          ]
        },

        "Roles": [
          { "Fn::Sub": [ "compute-role", { "Service": { "Ref" : "ServiceName" } } ] }
        ]
      }
    }

  }
}
