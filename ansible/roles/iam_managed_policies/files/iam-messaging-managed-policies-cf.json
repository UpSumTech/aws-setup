{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "Managed policies for the resources",

  "Parameters": {
    "ServiceName": {
      "Type": "String",
      "Description": "The type of the aws service for which you are creating this managed policy"
    }
  },

  "Resources": {

    "SuperuserManagedPolicies": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "sns:*",
                "sqs:*",
                "ses:*"
              ],
              "Resource": "*"
            }
          ]
        },

        "Groups": [
          "superuser"
        ],

        "Roles": [
          { "Fn::Sub": [ "superuser-${Service}-role", { "Service": { "Ref" : "ServiceName" } } ] }
        ]
      }
    },

    "DeveloperManagedPolicies": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "sns:*",
                "sqs:*",
                "ses:*"
              ],
              "Resource": "*"
            }
          ]
        },

        "Groups": [
          "developer"
        ],

        "Roles": [
          { "Fn::Sub": [ "developer-${Service}-role", { "Service": { "Ref" : "ServiceName" } } ] }
        ]
      }
    },

    "ComputeManagedPolicies": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "sns:ListTopics",
                "sns:ListSubscriptions",
                "sns:ListSubscriptionsByTopic",
                "sns:GetTopicAttributes",
                "sns:GetSubscriptionAttributes",
                "sns:Publish",
                "sns:Subscribe",
                "sns:Unsubscribe",
                "sns:ConfirmSubscription"
              ],
              "Resource": "*"
            },

            {
              "Effect": "Allow",
              "Action": [
                "sqs:GetQueueAttributes",
                "sqs:DeleteMessage",
                "sqs:ListDeadLetterSourceQueues",
                "sqs:ListQueues",
                "sqs:PurgeQueue",
                "sqs:ReceiveMessage",
                "sqs:SendMessage",
                "sqs:ChangeMessageVisibility",
                "sqs:SendMessageBatch"
              ],
              "Resource": "*"
            }
          ]
        },

        "Roles": [
          { "Fn::Sub": [ "compute-role", { "Service": { "Ref" : "ServiceName" } } ] }
        ]
      }
    }

  }
}
