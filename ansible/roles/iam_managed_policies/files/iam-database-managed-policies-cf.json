{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "Managed policies for the resources",

  "Parameters": {
    "ServiceName": {
      "Type": "String",
      "Description": "The type of the aws service for which you are creating this managed policy"
    }
  },

  "Resources": {

    "SuperuserManagedPolicies": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "rds:*",
                "dynamodb:*",
                "elasticache:*",
                "redshift:*",
                "sdb:*"
              ],
              "Resource": "*"
            }
          ]
        },

        "Groups": [
          "superuser"
        ],

        "Roles": [
          { "Fn::Sub": [ "superuser-${Service}-role", { "Service": { "Ref" : "ServiceName" } } ] }
        ]
      }
    },

    "DeveloperManagedPolicies": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "rds:*",
                "dynamodb:*",
                "elasticache:*",
                "redshift:*",
                "sdb:*"
              ],
              "Resource": "*"
            }
          ]
        },

        "Groups": [
          "developer"
        ],

        "Roles": [
          { "Fn::Sub": [ "developer-${Service}-role", { "Service": { "Ref" : "ServiceName" } } ] }
        ]
      }
    },

    "ComputeManagedPolicies": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "rds:DescribeDBInstances",
                "rds:DescribeDBEngineVersions"
              ],
              "Resource": "*"
            },

            {
              "Effect": "Allow",
              "Action": [
                "dynamodb:Batch*",
                "dynamodb:DescribeTable",
                "dynamodb:GetItem",
                "dynamodb:GetRecords",
                "dynamodb:PutItem",
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:UpdateItem",
              ],
              "Resource": "*"
            }
          ]
        },

        "Roles": [
          { "Fn::Sub": [ "compute-role", { "Service": { "Ref" : "ServiceName" } } ] }
        ]
      }
    }
  }
}
